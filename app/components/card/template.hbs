<div class="max-w-sm rounded overflow-hidden shadow-lg" ...attributes>
  <img class="w-full" src={{image}} alt={{t "Sunset in the mountains"}}>
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">{{t "The Coldest Sunset"}}</div>
    <p class="text-gray-700 text-base">
      {{t "Lorem ipsum"}}
    </p>
  </div>
  <div class="px-6 py-4">
    {{#each this.tags as |tag|}}
      <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">
        {{tag}}
      </span>
    {{/each}}
  </div>
</div>
